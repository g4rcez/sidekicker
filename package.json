{
    "name": "sidekicker",
    "version": "0.0.19",
    "description": "An abstract lib to help in our JS/TS projects",
    "main": "lib/index.js",
    "scripts": {
        "test": "jest",
        "watch-node": "nodemon lib/index.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc -w",
        "build": "tsc -b",
        "lint": "tslint --config tslint.json -p .",
        "format": "prettier --write '{.,src/**}/*.{js,jsx,ts,tsx}'",
        "start": "npm run watch"
    },
    "author": "vandalvnl",
    "repository": {
        "type": "github",
        "url": "https://github.com/vandalvnl/sidekicker"
    },
    "license": "MIT",
    "dependencies": {
        "@types/ramda": "^0.26.3",
        "axios": "^0.18.0",
        "moment": "^2.24.0",
        "ramda": "^0.26.1"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/jest": "^24.0.12",
        "@types/node": "^11.11.1",
        "babel-core": "^6.26.3",
        "babel-jest": "^24.1.0",
        "concurrently": "^4.0.1",
        "husky": "^1.3.1",
        "jest": "^24.8.0",
        "nock": "^10.0.2",
        "nodemon": "^1.18.6",
        "prettier": "^1.16.4",
        "regenerator-runtime": "^0.13.1",
        "ts-jest": "^23.10.5",
        "tslint": "^5.14.0",
        "typescript": "^3.4.5"
    },
    "husky": {
        "hooks": {}
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
        },
        "testMatch": [
            "**/tests/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node"
    }
}
