{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "declaration": true,
        "downlevelIteration": true,
        "experimentalDecorators": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "newLine": "LF",
        "pretty": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "esModuleInterop": true,
        "target": "es2015",
        "lib": ["es6", "es2018", "es7", "dom", "esnext"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": "./src",
        "paths": {
            "*": ["@types/*"],
            "@str": ["strings/index"],
            "@str/*": ["strings/*"],
            "@itr": ["iterable/index"],
            "@itr/*": ["iterable/*"],
            "@cmp": ["comparable/index"],
            "@cmp/*": ["comparable/*"],
            "@regex": ["regex/index"],
            "@regex/*": ["regex/*"]
        }
    },
    "typeAcquisition": { "enable": true },
    "include": ["src/**/*"]
}
