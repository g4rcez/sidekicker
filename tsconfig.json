{
    "compilerOptions": {
        "alwaysStrict": true,
        "emitBOM": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        "emitDecoratorMetadata": false,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": false,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": false,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "preserve",
        "lib": [
            "es6",
            "es2018",
            "es7",
            "dom",
            "esnext",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "pretty": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipDefaultLibCheck": true,
        "sourceMap": false,
        "target": "es5",
        "typeRoots": [
            "./src/@types"
        ],
        "paths": {
            "*": [
                "./src/@types/*"
            ]
        },
        "declarationMap": false,
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".git"
    ]
}
