{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "preserve",
        "lib": ["es6", "es2018", "es7", "dom", "esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "noImplicitAny": true,
        "outDir": "./lib",
        "pretty": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": ["./src/@types"],
        "paths": {
            "*": ["./src/@types/*"],
            "@str": ["./src/strings/index"],
            "@str/*": ["./src/strings/*"],
            "@itr": ["./src/iterable/index"],
            "@itr/*": ["./src/iterable/*"],
            "@cmp": ["./src/comparable/index"],
            "@cmp/*": ["./src/comparable/*"],
            "@regex": ["./src/regex/index"],
            "@regex/*": ["./src/regex/*"]
        }
    },
    "typeAcquisition": { "enable": true },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".git"]
}
